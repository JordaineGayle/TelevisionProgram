      <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="40.0" style="-fx-background-color: #212121;" BorderPane.alignment="CENTER">
         <children>
            <TextField maxHeight="1.7976931348623157E308" prefWidth="800.0" promptText="search for a program....comma seperate for multiple items" style="-fx-background-color: none; -fx-text-fill: white;">
               <font>
                  <Font name="Rockwell Bold Italic" size="14.0" />
               </font>
            </TextField>
            <MenuButton maxHeight="1.7976931348623157E308" mnemonicParsing="false" style="-fx-background-color: white;" text="Filter Programs" textFill="#212121">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
                <MenuItem mnemonicParsing="false" text="Action 2" />
              </items>
